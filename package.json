{
  "name": "web2figma",
  "version": "0.1.0",
  "description": "Chrome Extension + Figma Plugin: Convert any website into editable Figma designs. No backend.",
  "private": true,
  "scripts": {
    "dev": "node esbuild.config.mjs --watch",
    "build": "npm run build:extension && npm run build:plugin",
    "build:extension": "node esbuild.config.mjs --target=extension",
    "build:plugin": "node esbuild.config.mjs --target=plugin",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint '{extension,figma-plugin,shared}/**/*.{ts,tsx}'",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.100.0",
    "@types/chrome": "^0.0.280",
    "esbuild": "^0.24.0",
    "eslint": "^9.15.0",
    "preact": "^10.24.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
